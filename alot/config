[bindings]

  N = search tag:new
  T = search tag:todo
  t = toggletags todo
  shift tab = bprevious; refresh
  tab = bnext; refresh

  I = search tag:inbox and not tag:deleted and not tag:lists and not tag:ad

  q =
  Q = exit

  [[search]]
      & = toggletags deleted

  [[envelope]]
      e = toggleencrypt


